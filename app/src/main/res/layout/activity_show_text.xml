<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:keepScreenOn="true"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.subscreen.ShowText" >
    <TextView
        android:id="@+id/edit_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text=""
        android:textColor="#FFF"
        android:textScaleX="0.75"
        android:textSize="33sp"
        android:typeface="sans"
        android:layout_below="@+id/encodingButton"
        android:layout_toRightOf="@+id/controlrow"
        android:layout_toEndOf="@+id/controlrow"
        android:layout_above="@+id/pauseButton" />

    <RelativeLayout
        android:id="@+id/controlrow"
        android:orientation="horizontal"
        android:layout_width="25dp"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        >

    </RelativeLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="▋▋"
        android:id="@+id/pauseButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="pause"
        android:textColor="#ffffffff"
        android:background="#ff000000"
        android:textSize="20sp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Back"
        android:id="@+id/backButton"
        android:textColor="#ffffffff"
        android:background="#ff000000"
        android:singleLine="false"
        android:layout_alignTop="@+id/pauseButton"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_margin="0dp"
        android:clickable="true"
        android:padding="0dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frameRates"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/backButton"
        android:visibility="invisible"
        android:layout_alignTop="@+id/pauseButton"
        android:layout_toStartOf="@+id/pauseButton"
        android:layout_toLeftOf="@+id/pauseButton"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Change Encoding"
        android:id="@+id/encodingButton"
        android:textColor="#ffffffff"
        android:background="#ff000000"
        android:textSize="20sp"
        android:layout_alignRight="@+id/edit_message"
        android:layout_alignEnd="@+id/edit_message" />
    <Button
        android:textSize="20sp"
        android:textColor="#ffffffff"
        android:background="#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="←Prev"
        android:id="@+id/prevButton"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/pauseButton"/>
    <Button
        android:textSize="20sp"
        android:textColor="#ffffffff"
        android:background="#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Next→"
        android:id="@+id/nextButton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/pauseButton"/>
    <Button
        android:textSize="20sp"
        android:textColor="#ffffffff"
        android:background="#ff000000"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:text="Framerate"
        android:id="@+id/setFrameButton"
        android:layout_alignParentTop="true" />

</RelativeLayout>
